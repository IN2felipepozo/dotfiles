#!/usr/bin/env bash

cd "$(dirname "${BASH_SOURCE}")"

git pull origin master

# Install apps and packages

# Homebrew
ruby -e "$(curl -fsSL https://raw.github.com/Homebrew/homebrew/go/install)"
brew doctor

# Homebrew packages
brew install bash git bash-completion

# Cleanup
brew cleanup

# Hide /opt from Finder
chflags hidden /opt